@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

<div>
    <ul class="nav navbar-nav navbar-right" asp-controller="Home" asp-action="SetLanguage" 
        asp-route-returnUrl="@returnUrl" method="post">
        <li name="culture" onchange="this.form.submit();" value="en-US">
            <a>English</a>
        </li>
        <li name="culture" onchange="this.form.submit();" value="vi-VN">
            <a>Vietnamese</a>
        </li>
    </ul>
</div>